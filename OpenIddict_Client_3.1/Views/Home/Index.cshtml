@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
    @if (!User.Identity.IsAuthenticated)
    {
        <a class="btn btn-primary" asp-controller="Home" asp-action="Login">Login</a>
    }
    else
    {
        <form asp-controller="Home" asp-action="Logout" method="post" style="display:inline;">
            <button type="submit" class="btn btn-danger">Logout (@User.Identity.Name)</button>
        </form>
    }
</div>
