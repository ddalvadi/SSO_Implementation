@{
    ViewData["Title"] = "Welcome to EZ Energy";
    var username = User.Identity.IsAuthenticated ? User.Identity.Name : null;
}

@* <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="..." crossorigin="anonymous"> *@
<style>
    body {
        font-family: 'Segoe UI', sans-serif;
        background-color: #f8fdf8;
    }

    h1.display-4 {
        color: #2f9e44;
    }

    .btn-success {
        background-color: #2f9e44;
        border-color: #2f9e44;
    }

        .btn-success:hover {
            background-color: #276c35;
            border-color: #276c35;
        }
</style>


<div class="container mt-5">
    <div class="row justify-content-center text-center">
        <div class="col-md-8">
            <h1 class="display-4 fw-bold text-success mb-3">Welcome to EZ Energy</h1>
            <p class="lead text-muted">
                Powering smarter decisions for a sustainable future.
            </p>
           
            @if (!User.Identity.IsAuthenticated)
            {
                <a asp-controller="Home" asp-action="Login" class="btn btn-success btn-lg px-4 shadow-sm">
                    <i class="fas fa-sign-in-alt me-2"></i> Login
                </a>
            }
            else
            {
                <form asp-controller="Home" asp-action="Logout" method="post" class="d-inline">
                    <button type="submit" class="btn btn-outline-danger btn-lg px-4 shadow-sm">
                        <i class="fas fa-sign-out-alt me-2"></i> Logout (@username)
                    </button>
                </form>
            }
        </div>
    </div>
</div>
